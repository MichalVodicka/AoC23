{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2017",
    "module": "ES2022",
    "lib": ["es2022"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.js"]
}
